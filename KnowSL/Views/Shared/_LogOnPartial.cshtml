@if (Request.IsAuthenticated)
{
    <div class="form-group">
        <div class="col-xs-12" style="padding: 20px;">
            <p style="color:#fff;">Welcome <strong>@User.Identity.Name</strong>! [ @Html.ActionLink("Dashboard", "BetaUserList", "NewsLetter") ][ @Html.ActionLink("Log Off", "LogOff", "Account") ]</p>

        </div>
    </div>
}
else
{    
    @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")

    <form action="/Account/LogOn" method="post" class="form-horizontal login-group">
    <fieldset>
        <div class="form-group">
            <div class="col-xs-4">
                <input type="text" name="UserName" class="form-control" id="userName" placeholder="Username">
            </div>
            <div class="col-xs-4">
                <input type="password" name="Password" class="form-control" id="inputPassword" placeholder="Password">
                <div class="checkbox">
                    <label>
                        <input name="RememberMe" type="checkbox" value="true">
                        Remember me</label>
                </div>
            </div>
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary">
                    Login</button>
            </div>
        </div>
    </fieldset>
    </form>   
}
