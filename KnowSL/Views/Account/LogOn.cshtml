@model KnowSL.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
}
<div class="container mid-section">
    <div class="row">
        <div class="col-md-2">
            <img src="/Content/images/barcode.jpg" class="pull-right" />
        </div>
        <div class="col-md-10">
            <p class="catchy-slogan">
                Login Unsuccessful!
            </p>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            <h1>
                Please enter your user name and password.
                <br />
            </h1>
            <br />
            <h3>
                @Html.ActionLink("Register", "Register") if you don't have an account.
            </h3>
            <br />
        </div>
        <div class="col-md-6">
        </div>
    </div>
</div>
